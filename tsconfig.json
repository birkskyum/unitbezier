{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "index.test.ts",
    "index.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "dist",
    "node_modules",
    "rolldown.config.ts",
    "vitest.config.ts"
  ]
}
